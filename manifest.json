{
    "manifest_version": 2,

    "name": "Le Monde Zen",
    "description": "Cette extension permet de surfer sur lemonde.fr en mode zen sans être abonné ainsi que d'avoir accès aux articles premium",
    "version": "1.0.1",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "scripts/popup.html"
    },

    "permissions": [
        "tabs", "activeTab", "storage"
    ],

    "content_scripts": [
        {
            "matches": ["http://www.lemonde.fr/*article*"],
            "css": ["style/lemonde.css"],
            "js":["scripts/jquery.min.js", "scripts/trigger.js"]
        }
    ]
}
