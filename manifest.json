{
    "manifest_version": 2,

    "name": "Le Monde Zen",
    "description": "Surfez gratuitement en mode de lecture Zen sur lemonde.fr et acc√©dez aux articles premium sans abonnement !",
    "version": "1.1.0",

    "icons": {
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    },

    "browser_action": {
        "default_icon": "images/logo128.png",
        "default_popup": "scripts/popup.html"
    },

    "permissions": [
        "tabs", "activeTab", "storage"
    ],

    "content_scripts": [
        {
            "matches": ["http://www.lemonde.fr/*article*"],
            "css": ["style/lemonde.css"],
            "js":["scripts/jquery.min.js", "scripts/trigger.js"]
        }
    ]
}
