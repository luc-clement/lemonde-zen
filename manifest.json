{
    "manifest_version": 2,

    "name": "Le Monde Zen",
    "description": "This extension allows people to browse leMonde.fr quietly",
    "version": "1.0",

    "browser_action": {
        "default_icon": "lemondezen.png"
    },

    "background":{
        "scripts":["extension.js"]
    },

    "permissions": [
        "tabs"
    ],

    "content_scripts": [
        {
            "matches": ["http://www.lemonde.fr/*"],
            "css": ["lemonde.css"]
        }
    ]
}
