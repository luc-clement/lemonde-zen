{
    "manifest_version": 2,

    "name": "Le Monde Zen",
    "description": "Cette extension permet de surfer sur lemonde.fr en mode zen sans être abonné ainsi que d'avoir accès aux articles premium dans ce mode",
    "version": "1.0",

    "browser_action": {
        "default_icon": "logolemonde.png"
    },

    "background":{
        "scripts":["extension.js"]
    },

    "permissions": [
        "tabs", "activeTab"
    ],

    "content_scripts": [
        {
            "matches": ["http://www.lemonde.fr/*article*"],
            "css": ["lemonde.css"],
            "js":["jquery.min.js", "trigger.js"]
        }
    ]
}
